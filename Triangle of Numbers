#include<iostream>
using namespace std;


int main(){

    int i,j,k,l,n;
    cin>>n;
    
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n-i;j++)
            cout<<" ";
        for(k=1;k<=i;k++)
            cout<<k+i-1;
        for(l=1;l<i;l++)
            cout<<2*i-2-l+1;
        
        cout<<endl;
    }
    
    
    
}
