#include<iostream>
using namespace std;


int main(){

  
    int n;
    cin>>n;
    
    int i,j,k,l,m;
    
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n-i+1;j++)
            cout<<j;
        
        
        for(k=1;k<i;k++)
        {
            cout<<"*";
        }
        
        for(l=1;l<i;l++)
            cout<<"*";
        
        for(m=n-i+1;m>=1;m--)
            cout<<m;
        
        
        cout<<endl;
    }

}


